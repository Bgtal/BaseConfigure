<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="SnbSmartSearchEditStyle">@style/Search</item>
    </style>

    <style name="Search">
        <item name="snb_hint">搜索xxxxx</item>
        <item name="snb_textSize">14sp</item>
        <item name="snb_textColor">#ef8282</item>
        <item name="snb_hintColor">#FF949494</item>
        <item name="snb_searchIcon">@drawable/ic_navigation_close_btn</item>
        <item name="snb_clearBtnIcon">@drawable/snb_ic_clear_black_24dp</item>
        <item name="snb_autoSearch">true</item>
    </style>

</resources>
